# TeekaGramAi - Пример конфигурации
# ==================================

# Telegram API настройки
# ----------------------
# Получите на https://my.telegram.org
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
TELEGRAM_PHONE=+1234567890

# Google Gemini AI настройки
# ---------------------------
# Получите на https://ai.google.dev
GEMINI_API_KEY=your_gemini_api_key

# Flask веб-сервер настройки
# --------------------------
FLASK_SECRET_KEY=your_super_secret_key_here_make_it_random_and_long
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# Дополнительные настройки (опционально)
# -------------------------------------

# Пути к файлам данных (относительные от корня проекта)
DATA_DIR=data
ACCOUNTS_FILE=data/accounts.json
PROMPTS_FILE=data/system_prompts.json
CHAT_SETTINGS_FILE=data/chat_settings.json
STICKERS_FILE=data/stickers.json

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(levelname)s - [%(threadName)s] - %(message)s

# Ограничения производительности
MAX_CHARTS=120
MAX_CHAT_HISTORY=10000
REQUEST_TIMEOUT=30

# Настройки безопасности
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_MINUTE=60
SESSION_LIFETIME_HOURS=24

# Настройки AI модели
DEFAULT_GEMINI_MODEL=gemini-pro
MAX_TOKENS_PER_REQUEST=8192
TEMPERATURE=0.7
TOP_P=0.8
TOP_K=40

# Настройки Telegram клиента  
DEVICE_MODEL=TeekaGramAi
SYSTEM_VERSION=1.0.0
APP_VERSION=1.0.0
LANG_CODE=ru
SYSTEM_LANG_CODE=ru-RU

# Пути для медиа файлов (опционально)
MEDIA_CACHE_DIR=cache/media
TEMP_FILES_DIR=cache/temp
MAX_FILE_SIZE_MB=50

# Настройки базы данных (если используется)
# DATABASE_URL=sqlite:///teekagramai.db
# DATABASE_POOL_SIZE=5
# DATABASE_TIMEOUT=30